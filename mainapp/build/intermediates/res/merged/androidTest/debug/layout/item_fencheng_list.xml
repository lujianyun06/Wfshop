<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:background="#FFFFFF"  />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:text="{fa-clock-o}"
                    android:textSize="24sp"
                    android:textColor="@android:color/darker_gray"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fencheng_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="分成时间"
                    tools:ignore="RtlHardcoded" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:paddingLeft="5dp"
                    android:text="{fa-user}"
                    android:textSize="24sp"
                    android:textColor="@android:color/darker_gray"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fencheng_user"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="分成用户"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:background="#FFFFFF"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px">
            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="1px"
                  android:background="#FFFFFF"  />
            <View android:layout_width="0dp"
                  android:layout_weight="20"
                  android:layout_height="1px"
                  android:background="#777777"  />
            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="1px"
                  android:background="#FFFFFF"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:background="#FFFFFF"  />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:text="{fa-shopping-bag}"
                    android:textSize="24sp"
                    android:textColor="@android:color/darker_gray"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fencheng_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="分成商品"
                    tools:ignore="RtlHardcoded" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="{fa-building}"
                    android:textSize="24sp"
                    android:textColor="@android:color/darker_gray"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fencheng_shop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="分成店铺"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:background="#FFFFFF"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px">
            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="1px"
                  android:background="#FFFFFF"  />
            <View android:layout_width="0dp"
                  android:layout_weight="20"
                  android:layout_height="1px"
                  android:background="#777777"  />
            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="1px"
                  android:background="#FFFFFF"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:background="#FFFFFF"  />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:text="{fa-database}"
                    android:textSize="24sp"
                    android:textColor="@android:color/darker_gray"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fencheng_totalprice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="总价：￥80"
                    tools:ignore="RtlHardcoded" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:paddingLeft="5dp"
                    android:text="{fa-gg-circle}"
                    android:textSize="24sp"
                    android:textColor="@android:color/darker_gray"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fencheng_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="分成：￥8"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:background="#FFFFFF"  />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>