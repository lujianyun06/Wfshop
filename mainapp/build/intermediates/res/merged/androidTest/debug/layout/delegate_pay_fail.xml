<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:background="#1111"
                                              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_main"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/pay_fail_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="{fa-chevron-left}"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Back"
                android:gravity="center"
                />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <View android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="#F4F4F4"
        >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/appCompatTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:src="@drawable/check_order_error"
            android:textColor="#34B346"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_check_order_fail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="支付失败"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:ignore="HardcodedText"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_check_order_fail"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"/>



    </RelativeLayout>



</android.support.v7.widget.LinearLayoutCompat>